class Solution {
  public:
    int maxSum(vector<int> &arr) {
        // code here
        int n = arr.size();
        int maxsum = 0;
        
        for(int i =0; i < n -1; ++i){
            int min1 = min(arr[i], arr[i + 1]);
            int min2 = max(arr[i], arr[i + 1]);
            
            maxsum = max(maxsum, min1 + min2);

        }
        return maxsum;
        
    }
};
